{
  "name": "fortdox",
  "productName": "FortDox",
  "description": "Secure password handling for collaboration",
  "version": "1.3.0",
  "author": "EdgeGuide <info@edgeguide.com>",
  "main": "main.js",
  "homepage": "./",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/edgeguideab/fortdox"
  },
  "scripts": {
    "start": "electron .",
    "dev": "nf start",
    "mac": "build --mac",
    "win": "build --win",
    "win32": "build --win --ia32",
    "linux": "build --linux",
    "all": "build -mwl",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f",
    "electron-dev": "ELECTRON_START_URL=http://localhost:5000 electron . --dev",
    "electron-start": "node electron-wait-react.js",
    "build-css": "node-sass-chokidar styles/ -o public/css/",
    "watch-css": "npm run build-css && node-sass-chokidar styles/ -o public/css/ --watch --recursive",
    "react": "react-scripts start",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@edgeguideab/client-request": "^1.4.8",
    "@edgeguideab/password-check": "^1.2.6",
    "@edgeguideab/requestor": "^1.1.8",
    "clipboard-js": "^0.3.6",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.19.1",
    "immutable": "^3.8.2",
    "js-yaml": "^3.10.0",
    "moment": "^2.22.2",
    "node-sass-chokidar": "^1.3.0",
    "qrcode": "^1.2.0",
    "react": "^16.4.0",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.4.0",
    "react-markdown": "^2.5.1",
    "react-redux": "^5.0.6",
    "react-router": "^3.2.0",
    "react-scripts": "1.1.4",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "remarkable": "^1.7.1",
    "remarkable-react": "^1.3.1",
    "styled-components": "^3.1.6",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.5.0",
    "electron": "latest",
    "electron-builder": "^19.55.0",
    "electron-builder-squirrel-windows": "^19.55.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^8.7.2",
    "electron-react-devtools": "^0.4.0",
    "electron-rebuild": "^1.7.3",
    "eslint": "^3.15.0",
    "eslint-plugin-react": "^6.9.0",
    "foreman": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-concat": "^2.6.1",
    "gulp-connect": "^5.2.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-if": "^2.0.2",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.0",
    "gulp-ruby-sass": "^2.1.1",
    "gulp-uglify": "^2.1.2",
    "jest": "^22.4.2",
    "pump": "^1.0.3",
    "redux-devtools": "^3.4.1",
    "require-rebuild": "^1.2.8",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^1.1.2",
    "watchify": "^3.9.0"
  },
  "build": {
    "appId": "FortDox",
    "files": [
      "build/*",
      "index.html",
      "main.js",
      "config.json",
      "aes.js",
      "package.json",
      "resources/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://fortdox.edgeguide.se/downloads"
      }
    ],
    "mac": {
      "icon": "resources/logo.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "NSIS",
      "icon": "resources/logo.ico"
    }
  }
}
